generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//table barang
model Barangs {
  id  Int @id @default(autoincrement())
  nama_barang String  @unique
  kategori  String
  stok Int
  harga Int
  createdAt DateTime  @default(now())
  updatedAt DateTime @updatedAt
}

//table kategori
model Kategoris {
  id Int @id @default(autoincrement())
  nama_kategori String @unique
}

model Pelanggans{
  id Int @id @default(autoincrement())
  nama String @unique
}

model Users {
  id Int @id @default(autoincrement())
  name String @unique
  username String @unique
  password String
}

model Laporans {
  id Int @id @default(autoincrement())
  pelanggan String
  totalHarga Int
  createdAt DateTime @default(now())

  //foreign key
  cart Carts[] //satu laporan bisa memiliki banyak cart
}

model Carts{
  id_cart Int @id @default(autoincrement())
  id Int
  laporan_id Int
  pelanggan String
  nama_barang String
  harga Int
  stok Int
  diskon Int @default(0)
  total_harga Int
  jenis String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //relasi
  laporan Laporans @relation(fields: [laporan_id], references: [id], onDelete: Cascade)
}